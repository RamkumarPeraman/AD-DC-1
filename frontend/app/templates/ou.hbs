<div class="ou-grid">
  <h1 class="heading">Organizational Units</h1>
  <div class="tiles">
    {{#each this.ous as |ou|}}
      <div class="tile">
        <a href="#" {{on "click" (fn this.showOUDetails ou)}}>
          <img src="../asset/ou.png" alt="Organizational Unit Icon" class="ou_icon o_icon" />
          <br>{{ou.ouName}}
        </a>
      </div>
    {{else}}
      <h3 class="not_found">No OU's found</h3>
      <img src="../asset/empty.png" alt="No data" class="empty" />
    {{/each}}
  </div>

  {{#if this.selectedOU}}
    <div class="popup">
      <div class="popup-content">
        <button class="close-button" type="button" {{on "click" this.closePopup}}>X</button>
        <p><strong>OU Name:</strong> <i>{{this.selectedOU.ouName}}</i></p>
        <p><strong>Description:</strong> <i>{{this.selectedOU.description}}</i></p>
        <p><strong>Address:</strong> <i>{{this.selectedOU.address}}</i></p>
      </div>
    </div>
  {{/if}}
</div>